<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:padding="16dp"
        android:background="@drawable/home_background"
        tools:context=".ui.fragments.HomeFragment">


    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">

        <TextView android:layout_width="match_parent"
                  android:text="Rent a Car"
                  android:gravity="center"
                  android:textColor="@color/white"
                  android:textSize="25sp"
                  android:layout_height="wrap_content"/>

        <EditText android:layout_width="match_parent"
                  android:id="@+id/location"
                  android:hint="Select Booking Location"
                  android:textColorHint="@color/black"
                  android:inputType="textCapSentences"
                  android:padding="@dimen/_5sdp"
                  android:drawableEnd="@drawable/location_drawable"
                  android:drawableTint="@color/colorAccent"
                  android:layout_marginTop="20dp"
                  android:background="@drawable/edittext_background"
                  android:layout_height="45dp"/>

        <TextView android:layout_width="match_parent"
                  android:text="Rent Start"
                  android:textColor="@color/white"
                  android:layout_marginTop="@dimen/_10sdp"
                  android:textSize="20sp"
                  android:layout_height="wrap_content"/>

        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_weight="1"
                      android:layout_height="wrap_content">

            <EditText android:layout_width="0dp"
                      android:layout_weight="0.5"
                      android:id="@+id/start_date"
                      android:hint="Start Date"
                      android:layout_marginEnd="@dimen/_5sdp"
                      android:textColorHint="@color/black"
                      android:padding="@dimen/_5sdp"
                      android:drawableEnd="@drawable/date_drawable"
                      android:drawableTint="@color/colorAccent"
                      android:focusable="false"
                      android:background="@drawable/edittext_background"
                      android:layout_height="45dp"/>

            <EditText android:layout_width="0dp"
                      android:layout_weight="0.5"
                      android:id="@+id/start_time"
                      android:hint="Start Time"
                      android:layout_marginStart="@dimen/_5sdp"
                      android:textColorHint="@color/black"
                      android:padding="@dimen/_5sdp"
                      android:drawableEnd="@drawable/time_drawable"
                      android:drawableTint="@color/colorAccent"
                      android:focusable="false"
                      android:background="@drawable/edittext_background"
                      android:layout_height="45dp"/>

        </LinearLayout>


        <TextView android:layout_width="match_parent"
                  android:text="Rent End"
                  android:textColor="@color/white"
                  android:layout_marginTop="@dimen/_10sdp"
                  android:textSize="20sp"
                  android:layout_height="wrap_content"/>

        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_weight="1"
                      android:layout_height="wrap_content">

            <EditText android:layout_width="0dp"
                      android:layout_weight="0.5"
                      android:id="@+id/end_date"
                      android:hint="End Date"
                      android:layout_marginEnd="@dimen/_5sdp"
                      android:textColorHint="@color/black"
                      android:padding="@dimen/_5sdp"
                      android:drawableEnd="@drawable/date_drawable"
                      android:drawableTint="@color/colorAccent"
                      android:focusable="false"
                      android:background="@drawable/edittext_background"
                      android:layout_height="45dp"/>

            <EditText android:layout_width="0dp"
                      android:layout_weight="0.5"
                      android:id="@+id/end_time"
                      android:hint="End Time"
                      android:layout_marginStart="@dimen/_5sdp"
                      android:textColorHint="@color/black"
                      android:padding="@dimen/_5sdp"
                      android:drawableEnd="@drawable/time_drawable"
                      android:drawableTint="@color/colorAccent"
                      android:focusable="false"
                      android:background="@drawable/edittext_background"
                      android:layout_height="45dp"/>

        </LinearLayout>

        <Spinner
                android:id="@+id/drive"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/edittext_background"
                android:entries="@array/drive_arrays"
                android:prompt="@string/drive_prompt"
                android:textColor="#000000"
                android:textSize="20sp"/>


        <TextView android:layout_width="match_parent"
                  android:text="Number of people"
                  android:textColor="@color/white"
                  android:layout_marginTop="@dimen/_10sdp"
                  android:textSize="20sp"
                  android:layout_height="wrap_content"/>


        <Spinner
                android:id="@+id/spinner_service_id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginBottom="10dp"

                android:background="@drawable/edittext_background"
                android:entries="@array/number_arrays"
                android:prompt="@string/number_prompt"
                android:textColor="#000000"
                android:textSize="20sp"/>

        <Button android:layout_width="match_parent"
                android:background="@color/colorAccent"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Find your ride"
                android:textAllCaps="false"
                android:drawableTint="@color/white"
                android:drawableEnd="@drawable/search_drawable"
                android:textSize="@dimen/_18sdp"
                android:textColor="@color/white"
                android:layout_height="@dimen/_40sdp"/>

    </LinearLayout>
</FrameLayout>