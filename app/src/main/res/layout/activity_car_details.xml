<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:fillViewport="true">


    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            tools:context=".ui.activities.Activity_CarDetails">

        <androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                                           xmlns:app="http://schemas.android.com/apk/res-auto"
                                           android:id="@+id/toolbar"
                                           android:layout_width="match_parent"
                                           android:layout_height="wrap_content"
                                           android:background="@color/colorPrimary"
                                           android:minHeight="?attr/actionBarSize"
                                           app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                                           app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:id="@+id/car_name"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_18sdp"/>

        </androidx.appcompat.widget.Toolbar>


        <androidx.cardview.widget.CardView
                android:layout_margin="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <ImageView
                    android:id="@+id/car_image"
                    app:srcCompat="@drawable/prado"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"/>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
                android:padding="@dimen/_5sdp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@color/colorAccent"
                        android:textColor="@color/white"
                        android:text="Limited Mileage to 200km:"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                />


                <LinearLayout
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView

                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:text="Daily:"
                            android:layout_width="0dp"
                            android:layout_weight="0.4"
                            android:layout_height="40dp"
                    />

                    <TextView
                            android:id="@+id/daily"
                            android:layout_weight="0.6"
                            android:textSize="18sp"

                            android:textColor="@color/black"
                            android:text="Ksh 4,600"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                    />
                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
                android:visibility="gone"
                android:id="@+id/month_weekly"
                android:padding="@dimen/_5sdp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout

                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@color/colorAccent"
                        android:textColor="@color/white"
                        android:text="Unlimited Mileage:"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                />


                <LinearLayout
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView

                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:text="Weekly:"
                            android:layout_width="0dp"
                            android:layout_weight="0.4"
                            android:layout_height="40dp"
                    />

                    <TextView
                            android:id="@+id/weekly"
                            android:layout_weight="0.6"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:text="Ksh 4,600"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                    />
                </LinearLayout>

                <LinearLayout
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView

                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:text="Monthly:"
                            android:layout_width="0dp"
                            android:layout_weight="0.4"
                            android:layout_height="40dp"
                    />

                    <TextView
                            android:id="@+id/monthly"
                            android:layout_weight="0.6"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:text="Ksh 4,600"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                    />
                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:padding="@dimen/_5sdp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <LinearLayout

                    android:orientation="vertical"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@color/colorAccent"
                        android:textColor="@color/white"
                        android:text="Features"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>


                <LinearLayout

                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:tint="@color/icon_color"
                            android:src="@drawable/trans"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:textSize="18sp"
                            android:layout_weight="0.2"
                            android:textColor="@color/black"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                    />


                    <TextView
                            android:id="@+id/transmission"
                            android:layout_gravity="center"
                            android:layout_weight="0.3"
                            android:textColor="@color/white"
                            android:text="Manual"
                            android:gravity="center"
                            android:padding="@dimen/_3sdp"
                            android:background="@drawable/rounded_feature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                    />

                    <ImageView
                            android:tint="@color/icon_color"

                            android:src="@drawable/fuel"
                            android:layout_weight="0.2"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                    />

                    <TextView
                            android:id="@+id/fuel_type"
                            android:layout_weight="0.3"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:text="Petrol"
                            android:padding="@dimen/_3sdp"
                            android:background="@drawable/rounded_feature"

                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                    />
                </LinearLayout>


                <LinearLayout

                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_5sdp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <ImageView

                            android:tint="@color/icon_color"
                            android:src="@drawable/body"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                    />

                    <TextView
                            android:id="@+id/body"
                            android:padding="@dimen/_3sdp"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_7sdp"
                            android:background="@drawable/rounded_feature"
                            android:textColor="@color/white"
                            android:text="CrossOver"


                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                    />

                </LinearLayout>

                <LinearLayout

                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_5sdp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                    <ImageView
                            android:layout_marginStart="@dimen/_15sdp"
                            android:tint="@color/icon_color"
                            android:src="@drawable/bag"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                    />

                    <TextView
                            android:id="@+id/bags"
                            android:padding="@dimen/_3sdp"
                            android:gravity="center"
                            android:background="@drawable/rounded_feature"

                            android:layout_marginStart="@dimen/_7sdp"
                            android:textColor="@color/white"
                            android:text="Bags"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                    />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                    android:id="@+id/book"
                    android:backgroundTint="@color/book"
                    android:layout_alignParentEnd="true"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:text="Reserve"/>
        </RelativeLayout>


    </LinearLayout>

</ScrollView>