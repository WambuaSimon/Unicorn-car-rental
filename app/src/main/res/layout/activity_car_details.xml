                    <!--android:textColor="@android:color/white"-->
                    <!--android:textSize="@dimen/_18sdp"/>-->
        <!--</androidx.appcompat.widget.Toolbar>-->

        <androidx.cardview.widget.CardView
                android:layout_margin="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <ImageView
                    android:id="@+id/car_image"
                    android:src="@drawable/prado"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"/>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
                android:padding="@dimen/_5sdp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@color/colorAccent"
                        android:textColor="@color/white"
                        android:text="Limited Mileage to 250km:"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                />


                <LinearLayout
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView

                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:text="Daily:"
                            android:layout_width="0dp"
                            android:layout_weight="0.4"
                            android:layout_height="40dp"
                    />

                    <TextView
                            android:id="@+id/daily"
                            android:layout_weight="0.6"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:text="Ksh 4,600"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                    />
                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
                android:padding="@dimen/_5sdp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@color/colorAccent"
                        android:textColor="@color/white"
                        android:text="Unlimited Mileage:"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                />


                <LinearLayout
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView

                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:text="Weekly:"
                            android:layout_width="0dp"
                            android:layout_weight="0.4"
                            android:layout_height="40dp"
                    />

                    <TextView
                            android:id="@+id/weekly"
                            android:layout_weight="0.6"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:text="Ksh 4,600"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                    />
                </LinearLayout>

                <LinearLayout
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView

                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:text="Monthly:"
                            android:layout_width="0dp"
                            android:layout_weight="0.4"
                            android:layout_height="40dp"
                    />

                    <TextView
                            android:id="@+id/monthly"
                            android:layout_weight="0.6"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:text="Ksh 4,600"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                    />
                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:padding="@dimen/_5sdp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@color/colorAccent"
                        android:textColor="@color/white"
                        android:text="Features"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                />


                <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroup"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                >


                    <com.google.android.material.chip.Chip
                            android:id="@+id/chip6"
                            style="@style/Widget.MaterialComponents.Chip.Action"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Leather Seats"/>

                    <com.google.android.material.chip.Chip
                            android:id="@+id/chip7"
                            style="@style/Widget.MaterialComponents.Chip.Action"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Music System"/>

                    <com.google.android.material.chip.Chip
                            android:id="@+id/chip8"
                            style="@style/Widget.MaterialComponents.Chip.Action"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Automatic drive"/>

                    <com.google.android.material.chip.Chip
                            android:id="@+id/chip9"
                            style="@style/Widget.MaterialComponents.Chip.Action"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cruise control"/>

                    <com.google.android.material.chip.Chip
                            android:id="@+id/chip10"
                            style="@style/Widget.MaterialComponents.Chip.Action"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Heads-up display"/>


                </com.google.android.material.chip.ChipGroup>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                    android:id="@+id/book"
                    android:backgroundTint="@color/book"
                    android:layout_alignParentEnd="true"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:text="Book"/>
        </RelativeLayout>


    </LinearLayout>

</ScrollView>